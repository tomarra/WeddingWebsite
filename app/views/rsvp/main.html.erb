<div class="row-fluid">
	<div class="span12">
		<h1>RSVP <%= image_tag "dark_hearts.png", :class => 'page-title-heart' %></h1>
	</div>
</div>

<hr/>

<%= render "shared/flash_container" %>

<%= form_tag("/rsvp/search", :method => "post", :class => "form-horizontal") do %>
	<div class="control-group">
		<%= label_tag(:last_name, "Last Name:", :class => "control-label") %>
		<div class="controls">
			<%= text_field_tag(:last_name, "", :placeholder => "Last Name") %>
		</div>
	</div>
	
	<div class="control-group">
		<%= label_tag(:password, "Password:", :class => "control-label") %>
		<div class="controls">
			<%= password_field_tag(:password, "", :placeholder => "Password") %>
		</div>
	</div>

	<div class="control-group">
		<div class="controls">
			<%= submit_tag("Search", :class => "btn") %>
		</div>
	</div>
<% end %>